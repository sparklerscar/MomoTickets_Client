<script type="text/javascript">
    $(function () {
        $(".card .btn-like img").click(function () {
            var ifLike = 0;//0未选择（未点亮），1喜欢（点亮）
            var name = $(this).attr("name");
            if (name == "unselected") {
                $(this).attr("name", "selected");
                ifLike = 1;
                $(this).attr("src", "/images/heart_full.png");
            } else {
                $(this).attr("name", "unselected");
                ifLike = 0;
                $(this).attr("src", "/images/heart.png");
            }
            var gid = $("#graphID").attr("value");
            var username = $("#a-ownUsername").val();
            $.ajax({
                type: "post",
                url: "/j<%=username%>/likeGraph/g"+gid+"/i"+ifLike+"",
                data: {},
                success: function (data) {
                }
            });

            // ifLike(ifLike);
        });
    });


    $("#div-follow").hide();
    $(function () {
        $("#btn-follow").click(function () {
            $("#btn-follow").attr("class", "btn btn-primary");
            $("#btn-hot").attr("class", "btn btn-secondary");
            $("#btn-all").attr("class", "btn btn-secondary");
            $("#div-follow").show();
            $("#div-hot").hide();
        });

        $("#btn-hot").click(function () {
            $("#btn-follow").attr("class", "btn btn-secondary");
            $("#btn-hot").attr("class", "btn btn-primary");
            $("#btn-all").attr("class", "btn btn-secondary");
            $("#div-follow").hide();
            $("#div-hot").show();
        });

    });
</script>
